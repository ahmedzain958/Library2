<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_margin_horizontal"
        android:layout_marginTop="@dimen/list_item_top_margin"
        android:layout_marginEnd="@dimen/list_item_margin_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_text_margin_horizontal"
            android:layout_marginTop="@dimen/list_item_text_margin_vertical"
            android:layout_marginEnd="@dimen/list_item_text_margin_horizontal"
            android:layout_marginBottom="@dimen/list_item_text_margin_vertical"
            tools:text="Dashboard" />

    </androidx.cardview.widget.CardView>
</layout>